<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_dialog"
    android:orientation="vertical"
    app:behavior_hideable="false"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/drive_route"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <ImageView
                android:id="@+id/drive_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Car Routing Option"
                android:src="@drawable/directions_car" />

            <TextView
                android:id="@+id/drive_route_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/drive_route_div"
                android:fontFamily="Karla"
                android:text="3 min"
                android:textColor="#DE000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/drive_route_div"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/drive_route_cost"
                android:theme="@style/textDivider" />

            <TextView
                android:id="@+id/drive_route_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:fontFamily="Karla"
                android:text="$3"
                android:textColor="#DE000000"
                android:textSize="20sp" />
        </RelativeLayout>

        <View style="@style/dividerHorizontal" />

        <RelativeLayout
            android:id="@+id/walk_route"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <ImageView
                android:id="@+id/walk_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Walk Route Option"
                android:src="@drawable/directions_walk" />

            <TextView
                android:id="@+id/walk_route_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/walk_route_div"
                android:fontFamily="Karla"
                android:text="3 min"
                android:textColor="#DE000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/walk_route_div"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/walk_route_cost"
                android:theme="@style/textDivider" />

            <TextView
                android:id="@+id/walk_route_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:fontFamily="Karla"
                android:text="$3"
                android:textColor="#DE000000"
                android:textSize="20sp" />
        </RelativeLayout>

        <View style="@style/dividerHorizontal" />

        <RelativeLayout
            android:id="@+id/bike_route"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <ImageView
                android:id="@+id/bike_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Bike Route Options"
                android:src="@drawable/directions_bike" />

            <TextView
                android:id="@+id/bike_route_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/bike_route_div"
                android:fontFamily="Karla"
                android:text="3 min"
                android:textColor="#DE000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/bike_route_div"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/bike_route_cost"
                android:theme="@style/textDivider" />

            <TextView
                android:id="@+id/bike_route_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:fontFamily="Karla"
                android:text="$3"
                android:textColor="#DE000000"
                android:textSize="20sp" />
        </RelativeLayout>

        <Button
            android:id="@+id/start_route_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Start Route"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>